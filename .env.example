# HyperTick Production Environment Variables
# Copy this file to .env.local for local development
# Set these in Render/Supabase dashboard for production

# Database - Supabase PostgreSQL connection string
# Get this from Supabase Dashboard > Settings > Database > Connection string (URI)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Authentication
JWT_SECRET="your-secure-jwt-secret-min-32-chars"

# Application URL (used for CORS and redirects)
NEXT_PUBLIC_APP_URL="https://your-app.onrender.com"

# Optional: Custom CORS origins (comma-separated)
# CORS_ORIGINS="https://your-app.onrender.com,https://custom-domain.com"

# Node environment
NODE_ENV="production"

# Server hostname (0.0.0.0 for Docker/Render)
HOSTNAME="0.0.0.0"

# Port (Render provides this automatically)
PORT=3000
